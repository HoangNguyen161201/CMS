@model assignment.Models.Trainee

@{
    Layout = "../Shared/_LayoutMain.cshtml";
}




<p class="title">
    Create trainee __ &#127753; &#127753;
</p>

@if (@TempData["message"] != null)
{
    <div class="toast toast__success">
        <p>&#128077;</p>
        <p> @TempData["message"] </p>
    </div>
}

@if (@TempData["Error"] != null)
{
    <div class="toast toast__error">
        <p>&#128078;</p>
        <p> @TempData["Error"] </p>
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="formControll">
            <p class='label_input'>
                @Html.LabelFor(model => model.TraineeId) <span>*</span>
            </p>
            <div class="input inputBlur">
                <i class="fas fa-key"></i>
                @Html.TextBoxFor(model => model.TraineeId, new { placeholder = "Enter your Id ..." })
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.TraineeId, null, new { @class = "error" })
    </div>

    <div class="gridForm">
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Trainee_fullname) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-pencil-alt"></i>
                    @Html.TextBoxFor(model => model.Trainee_fullname, new { placeholder = "Enter your fullname ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Trainee_fullname, null, new { @class = "error" })
        </div>
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Trainee_username) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(model => model.Trainee_username, new { placeholder = "Enter your username ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Trainee_username, null, new { @class = "error" })
        </div>
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Trainee_password) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-unlock"></i>
                    @Html.PasswordFor(model => model.Trainee_password, new { placeholder = "Enter your passwrord ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Trainee_password, null, new { @class = "error" })
        </div>
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.ConfirmPassword)
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-unlock"></i>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = "Enter your re-password ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "error" })
        </div>
    </div>
    <div>
    </div>
    <button class="bt__default">Create</button>
}





