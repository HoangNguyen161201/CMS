@model assignment.Models.Trainer

@{
    Layout = "../Shared/_LayoutMain.cshtml";
}

<p class="title">
    Edit Account __ &#128054; &#128055;
</p>

@if (@TempData["Error"] != null)
{
    <div class="toast toast__error">
        <p>&#128078;</p>
        <p> @TempData["Error"] </p>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TrainerId)

    <div>
        <div class="formControll">
            <p class='label_input'>
                @Html.LabelFor(model => model.TrainerId) <span>*</span>
            </p>
            <div class="input inputBlur">
                <i class="fas fa-key"></i>
                @Html.TextBoxFor(model => model.TrainerId, new { disabled = "disabled" })
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.TrainerId, null, new { @class = "error" })
    </div>
    <div>
        <div class="formControll">
            <p class='label_input'>
                @Html.LabelFor(model => model.Trainer_fullname) <span>*</span>
            </p>
            <div class="input inputBlur">
                <i class="fas fa-pencil-alt"></i>
                @Html.TextBoxFor(model => model.Trainer_fullname, new { placeholder = "Enter your fullname ..." })
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.Trainer_fullname, null, new { @class = "error" })
    </div>

    <div class="gridForm">

        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Trainer_username) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(model => model.Trainer_username, new { placeholder = "Enter username ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Trainer_username, null, new { @class = "error" })
        </div>
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Trainer_password) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-unlock"></i>
                    @Html.PasswordFor(model => model.Trainer_password, new { placeholder = "Enter passwrord ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Trainer_password, null, new { @class = "error" })
        </div>
    </div>
    <button class="bt__default">Save</button>
}