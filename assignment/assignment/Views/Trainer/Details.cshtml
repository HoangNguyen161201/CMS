@model assignment.Models.Trainer

@{
    Layout = "../Shared/_LayoutMain.cshtml";
}


<p class="title">
    Detail trainer __ &#127866; &#127866;
</p>
<div class="flex gap-30 flex-col letter-3">
    <div class="flex items-center gap-20">
        <h2>@Html.DisplayFor(model => model.TrainerId)</h2>
