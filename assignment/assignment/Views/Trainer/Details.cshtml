        <p class='text'>
            <span>@Html.DisplayNameFor(model => model.Trainer_email): </span>
            <span>@Html.DisplayFor(model => model.Trainer_email)</span>
        </p>
        <p class='text'>
            <span>@Html.DisplayNameFor(model => model.trainer_phone): </span>
            <span>@Html.DisplayFor(model => model.trainer_phone)</span>
        </p>
        <p class='text'>
            <span>@Html.DisplayNameFor(model => model.Trainer_type): </span>
            <span>@Html.DisplayFor(model => model.Trainer_type)</span>
        </p>
    </div>
</div>


















