@model IEnumerable<assignment.Models.AssignCourse>

@{
    Layout = "../Shared/_LayoutMain.cshtml";
}



<p class="title">
    Show Courses __ &#128512; &#128513;
</p>

@ViewBag.error
@if (ViewBag.error == null)
{
    <div class="items">
        @foreach (var item in Model)
        {
            <a href="/trainee/details-course/@Html.DisplayFor(modelItem => item.Course.CourseId)" class="item">
                <div class="item__course">
                    <img class="course__img" src="@Html.DisplayFor(modelItem => item.Course.image)" />
                    <h3 class="course__name">@Html.DisplayFor(modelItem => item.Course.Course_name)</h3>
                    <div>
                        <p class="category__name">Category - @Html.DisplayFor(modelItem => item.Course.CourseCategory.Category_name)</p>
                        <p class="description">@Html.DisplayFor(modelItem => item.Course.Course_description)</p>
                    </div>
                </div>
            </a>
        }

    </div>

    <script>
        document.getElementById('search').addEventListener("input", (e) => {
            search(e.target.value, ['course__name', 'category__name', 'description'])
        })

    </script>
}
