@model assignment.Models.Training_staff




@{
    Layout = "../Shared/_LayoutMain.cshtml";
}

<p class="title">
    Edit profile __ &#9925;
</p>

@using (Html.BeginForm("UpdateProfileStaff", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.StaffId)
    <div>
        <div class="formControll">
            <p class='label_input'>
                @Html.LabelFor(model => model.StaffId) <span>*</span>
            </p>
            <div class="input inputBlur">
                <i class="fas fa-key"></i>
                @Html.TextBoxFor(model => model.StaffId, new { placeholder = "Enter Id ...", disabled = "disabled" })
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.StaffId, null, new { @class = "error" })
    </div>

    <div>
        <div class="formControll">
            <p class='label_input'>
                @Html.LabelFor(model => model.Staff_fullname) <span>*</span>
            </p>
            <div class="input inputBlur">
                <i class="fas fa-pencil-alt"></i>
                @Html.TextBoxFor(model => model.Staff_fullname, new { placeholder = "Enter fullname ..."})
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.Staff_fullname, null, new { @class = "error" })
    </div>


    <div class="gridForm">
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Staff_username) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-pencil-alt"></i>
                    @Html.TextBoxFor(model => model.Staff_username, new { placeholder = "Enter fullname ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Staff_username, null, new { @class = "error" })
        </div>
        <div>
            <div class="formControll">
                <p class='label_input'>
                    @Html.LabelFor(model => model.Staff_password) <span>*</span>
                </p>
                <div class="input inputBlur">
                    <i class="fas fa-unlock"></i>
                    @Html.PasswordFor(model => model.Staff_password, new { placeholder = "Enter password ..." })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Staff_password, null, new { @class = "error" })
        </div>
    </div>
    <button class="bt__default">Save</button>
}